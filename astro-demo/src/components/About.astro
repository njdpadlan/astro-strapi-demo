---
import { Image } from "astro:assets";
const { aboutText, aboutDescription, aboutPhotoUrl, aboutAlternativeText } = Astro.props;
// const photoUrl = `${import.meta.env.STRAPI_URL}${'/uploads/cat_6a9ae67733.JPG'}`;

const photoUrl = `${import.meta.env.STRAPI_URL}${aboutPhotoUrl}`;



---

<div class="max-w-4xl mx-auto bg-gray-100 rounded-2xl shadow overflow-hidden grid grid-cols-1 md:grid-cols-2 m-20">
  <!-- Image on the left -->
  <div class="w-full">
    <img src={photoUrl} alt={aboutAlternativeText} class="w-full h-64 md:h-full object-cover rounded-l-2xl" />
     <!-- <Image src={photoUrl} alt={aboutAlternativeText} width="400" height="400"/> -->
  </div>

  <!-- Heading and text on the right -->
  <div class="w-full p-6 flex flex-col justify-center">
    <h2 class="text-2xl md:text-3xl font-bold mb-4 text-gray-900">{aboutText}</h2>
    <p class="text-gray-700 text-base md:text-lg">{aboutDescription}</p>
  </div>
</div>


