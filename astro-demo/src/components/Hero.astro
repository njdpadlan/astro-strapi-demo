---
import '../styles/global.css'
const { heroText, heroDescription, bannerImg, bannerAltText } = Astro.props;

const photoUrl = `${import.meta.env.STRAPI_URL}${bannerImg}`;

---


<div class="relative max-w-6xl mx-auto rounded-2xl overflow-hidden shadow-lg m-10">
  <!-- Banner image -->
  <img src={photoUrl} alt={bannerAltText} class="w-full h-64 object-cover sm:h-96" />

  <!-- Overlay text -->
  <div class="absolute inset-0 bg-black/40 flex flex-col justify-center items-center text-center p-6">
    <h1 class="text-4xl sm:text-5xl font-bold text-white mb-4">{heroText}</h1>
    <p class="text-lg sm:text-xl text-white">{heroDescription}</p>
  </div>
</div>
